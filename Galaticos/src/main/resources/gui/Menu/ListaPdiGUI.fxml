<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.ListaPdiController">
    <stylesheets>
        <URL value="@/css/StylePDI.css" /> </stylesheets>

    <children>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="1100.0" spacing="20.0" styleClass="content-card">
            <StackPane.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </StackPane.margin>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <Label styleClass="page-title" text="Gerenciamento de Planos de Desenvolvimento (Kanban)" />

                <HBox fx:id="filterBar" alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar">
                    <children>
                        <Label text="Buscar por ID do Usuário:" />
                        <TextField fx:id="usuarioIdTextField" prefWidth="150.0" promptText="Digite o ID" />
                        <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#handleBuscarAction" styleClass="primary-button" text="Buscar" />
                        <Button fx:id="limparFiltroButton" mnemonicParsing="false" onAction="#handleLimparFiltroAction" styleClass="secondary-button" text="Mostrar Todos" />
                    </children>
                </HBox>

                <HBox fx:id="kanbanBoardPdi" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox styleClass="kanban-column" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="kanban-column-title" text="Em Andamento" />
                                <ScrollPane fitToWidth="true" styleClass="kanban-scroll-pane" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="colunaEmAndamento" spacing="15.0" styleClass="kanban-content-area" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>

                        <VBox styleClass="kanban-column" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="kanban-column-title" text="Concluído" />
                                <ScrollPane fitToWidth="true" styleClass="kanban-scroll-pane" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="colunaConcluido" spacing="15.0" styleClass="kanban-content-area" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>

                        <VBox styleClass="kanban-column" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="kanban-column-title" text="Arquivado" />
                                <ScrollPane fitToWidth="true" styleClass="kanban-scroll-pane" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="colunaArquivado" spacing="15.0" styleClass="kanban-content-area" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="cadastrarPdiButton" mnemonicParsing="false" onAction="#handleAbrirModalCadastro" styleClass="primary-button" text="Cadastrar Novo PDI" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>