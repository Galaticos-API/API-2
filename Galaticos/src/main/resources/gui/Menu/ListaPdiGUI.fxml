<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.ListaPdiController" stylesheets="@/css/StylePDI.css">

    <children>
        <VBox alignment="TOP_CENTER" maxHeight="650.0" maxWidth="900.0" spacing="20.0" styleClass="content-card">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <Label styleClass="page-title" text="Gerenciamento de Planos de Desenvolvimento" />

                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar">
                    <children>
                        <Label text="Buscar por ID do Usuário:" />
                        <TextField fx:id="usuarioIdTextField" prefWidth="150.0" promptText="Digite o ID" />
                        <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#handleBuscarAction" styleClass="primary-button" text="Buscar" />
                        <Button fx:id="limparFiltroButton" mnemonicParsing="false" onAction="#handleLimparFiltroAction" styleClass="secondary-button" text="Mostrar Todos" />
                    </children>
                </HBox>

                <TableView fx:id="pdiTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="PDI ID" />
                        <TableColumn fx:id="colaboradorIdColumn" prefWidth="120.0" text="Colaborador" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                        <TableColumn fx:id="dataCriacaoColumn" prefWidth="180.0" text="Data de Criação" />
                        <TableColumn fx:id="pontuacaoColumn" prefWidth="150.0" text="Pontuação" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="cadastrarPdiButton" mnemonicParsing="false" onAction="#handleAbrirModalCadastro" styleClass="primary-button" text="Cadastrar Novo PDI" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
