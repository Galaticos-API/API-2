<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.ListaPdiGUIController">
    <children>
        <Label layoutX="250.0" layoutY="14.0" text="Gerenciamento de PDIs">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="60.0" spacing="10.0">
            <children>
                <Label text="Buscar por ID do Colaborador:" />
                <TextField fx:id="colaboradorIdTextField" prefWidth="150.0" promptText="Digite o ID" />
                <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#handleBuscarAction" text="Buscar" />
                <Button fx:id="limparFiltroButton" mnemonicParsing="false" onAction="#handleLimparFiltroAction" text="Mostrar Todos" />
            </children>
        </HBox>

        <TableView fx:id="pdiTableView" layoutX="40.0" layoutY="110.0" prefHeight="340.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID PDI" />
                <TableColumn fx:id="colaboradorIdColumn" prefWidth="120.0" text="ID Colaborador" />
                <TableColumn fx:id="anoColumn" prefWidth="75.0" text="Ano" />
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                <TableColumn fx:id="dataCriacaoColumn" prefWidth="180.0" text="Data de Criação" />
                <TableColumn fx:id="pontuacaoColumn" prefWidth="150.0" text="Pontuação Geral" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Button fx:id="cadastrarPdiButton" layoutX="670.0" layoutY="465.0" mnemonicParsing="false" onAction="#handleCadastrarPdiAction" style="-fx-font-size: 14px;" text="Cadastrar PDI" />
    </children>
</AnchorPane>