<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.ListaPdiController">
    <stylesheets>
        <URL value="@/css/StylePDI.css" /> </stylesheets>

    <children>
        <VBox alignment="TOP_CENTER" maxHeight="650.0" maxWidth="900.0" spacing="20.0" styleClass="content-card">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <Label styleClass="page-title" text="Planos de Desenvolvimento" />

                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar">
                    <children>
                        <Label text="Buscar por ID do UsuÃ¡rio:" />
                        <TextField fx:id="usuarioIdTextField" prefWidth="150.0" promptText="Digite o ID" />
                        <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#handleBuscarAction" styleClass="primary-button" text="Buscar" />
                        <Button fx:id="limparFiltroButton" mnemonicParsing="false" onAction="#handleLimparFiltroAction" styleClass="secondary-button" text="Mostrar Todos" />
                    </children>
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="pdiFlowPane" hgap="20.0" vgap="20.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="cadastrarPdiButton" mnemonicParsing="false" onAction="#handleAbrirModalCadastro" styleClass="primary-button" text="Cadastrar Novo PDI" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>