<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.CadastroPdiController">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox alignment="TOP_CENTER" spacing="12.0">
                    <padding>
                        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Cadastro de Novo PDI">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>
                        <Separator prefWidth="200.0" />
                        <Label text="Dados do PDI" alignment="CENTER" maxWidth="1.7976931348623157E308">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Colaborador:" minWidth="120.0" />
                                <TextField fx:id="colaboradorIdField" promptText="Ex: 101" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Ano:" minWidth="120.0" />
                                <TextField fx:id="anoField" promptText="Ex: 2024" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Status do PDI:" minWidth="120.0" />
                                <ChoiceBox fx:id="statusPdiChoiceBox" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <Separator prefWidth="200.0">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Separator>
                        <Label text="Primeiro Objetivo de Desenvolvimento" alignment="CENTER" maxWidth="1.7976931348623157E308">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Descrição do Objetivo:" />
                                <TextArea fx:id="descricaoObjetivoArea" prefHeight="70.0" wrapText="true" />
                            </children>
                        </VBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Prazo:" minWidth="120.0" />
                                <DatePicker fx:id="prazoObjetivoPicker" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Peso (importância):" minWidth="120.0" />
                                <TextField fx:id="pesoObjetivoField" promptText="Ex: 1.5" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Status do Objetivo:" minWidth="120.0" />
                                <ChoiceBox fx:id="statusObjetivoChoiceBox" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Comentários (Opcional):" />
                                <TextArea fx:id="comentariosObjetivoArea" prefHeight="50.0" wrapText="true" />
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="cadastrarPdiBtn" mnemonicParsing="false" onAction="#clickCadastrarPdi" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Cadastrar PDI e Objetivo">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="voltarBtn" mnemonicParsing="false" onAction="#clickVoltar" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Voltar">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>