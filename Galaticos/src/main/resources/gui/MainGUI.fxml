<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
    <stylesheets>
        <URL value="@../css/StyleMain.css"/>
    </stylesheets>

    <top>
        <HBox fx:id="navigationBar" alignment="CENTER" spacing="20.0" styleClass="navigation-bar"
              BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnObjetivos" mnemonicParsing="false" onAction="#handleMenuObjetivos"
                        styleClass="navigation-button" text="Meu PDI"/>
                <Button fx:id="btnPerfil" mnemonicParsing="false" onAction="#handleMenuPerfil"
                        styleClass="navigation-button" text="Meu Perfil"/>

                <Separator fx:id="rhSeparator" orientation="VERTICAL" styleClass="nav-separator"/>
                <Button fx:id="btnDashboard" mnemonicParsing="false" onAction="#handleMenuDashboard"
                        styleClass="navigation-button" text="Dashboard PDIs"/>

                <Button fx:id="btnPDI" mnemonicParsing="false" onAction="#handleMenuPDI" styleClass="navigation-button"
                        text="Gerenciar PDIs"/>
                <Button fx:id="btnUsuarios" mnemonicParsing="false" onAction="#handleMenuUsuarios"
                        styleClass="navigation-button" text="Gerenciar Usuários"/>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane fx:id="conteudo" BorderPane.alignment="CENTER"/>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="status-bar" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="15.0" right="15.0"/>
            </padding>
            <children>
                <Label fx:id="funcaoUsuario" styleClass="status-label" text="Função:"/>
                <Label fx:id="logadoComo" styleClass="status-label" text="Logado(a) como: "/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="btnSair" mnemonicParsing="false" onAction="#handleSair" styleClass="sair-button"
                        text="Sair"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
