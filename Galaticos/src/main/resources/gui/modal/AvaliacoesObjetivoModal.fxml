<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="15.0" styleClass="modal-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.modal.AvaliacoesObjetivoModalController">
    <stylesheets>
        <URL value="@/css/StyleModais.css" /> </stylesheets>
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>

    <Text fx:id="txtTituloObjetivo" styleClass="modal-title" text="Avaliações Recebidas" wrappingWidth="400.0" textAlignment="CENTER"/>

    <Label styleClass="modal-label" text="Histórico de Avaliações:" alignment="CENTER_LEFT" maxWidth="Infinity">
        <VBox.margin>
            <Insets top="10.0" bottom="5.0"/>
        </VBox.margin>
    </Label>

    <ListView fx:id="listViewAvaliacoes" prefHeight="300.0" styleClass="avaliacoes-list-view" VBox.vgrow="ALWAYS"/>

    <VBox alignment="CENTER_RIGHT">
        <Button onAction="#handleFechar" style="-fx-background-color: #dbe2e3;" styleClass="modal-button-cancel" text="Fechar" textFill="WHITE">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>