<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 30; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.modal.CadastroPdiModalController">

    <Text style="-fx-fill: #333333;" text="Novo Plano de Desenvolvimento Individual (PDI)">
        <font>
            <Font size="22.0" />
        </font>
    </Text>

    <GridPane alignment="TOP_CENTER" hgap="15.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
        </rowConstraints>

        <Label text="ID do Colaborador:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="colaboradorIdField" promptText="ID ou MatrÃ­cula" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleBuscarColaborador" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Buscar" />
        </HBox>
        <Text fx:id="colaboradorNomeText" style="-fx-font-size: 11; -fx-fill: #6c757d;" text="Nome: [Aguardando Busca]" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label prefHeight="17.0" prefWidth="159.0" text="Data de fechamento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="dataFechamentoField" prefHeight="25.0" prefWidth="293.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Status Inicial:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="statusComboBox" promptText="Selecione o Status" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleCancelar" style="-fx-background-color: #f0f0f0; -fx-text-fill: #333333;" text="Cancelar" />
        <Button onAction="#handleCriarPdi" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;" text="Criar PDI" />
    </HBox>

    <Text fx:id="mensagemErro" style="-fx-fill: red; -fx-font-weight: bold;" />

</VBox>
