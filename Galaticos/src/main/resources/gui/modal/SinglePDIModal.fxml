<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="589.0" prefWidth="589.0" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.modal.SinglePDIModalController">

    <Text style="-fx-fill: #333333;" text="Plano de Desenvolvimento Individual">
        <font>
            <Font size="24.0" />
        </font>
    </Text>

    <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Progresso Geral do PDI:" />
        <ProgressBar fx:id="progressBarGeral" prefWidth="529.0" progress="0.75" />
        <Text fx:id="textPontuacaoGeral" style="-fx-font-size: 14;" text="75.0% Concluído" />
    </VBox>

    <TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Dados Gerais e Colaborador">
            <content>
                <GridPane hgap="10.0" prefHeight="179.0" prefWidth="549.0" style="-fx-padding: 20;" vgap="10.0">
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints percentWidth="20.0" />
                        <javafx.scene.layout.ColumnConstraints percentWidth="30.0" />
                        <javafx.scene.layout.ColumnConstraints percentWidth="20.0" />
                        <javafx.scene.layout.ColumnConstraints percentWidth="30.0" />
                    </columnConstraints>

                    <Label text="Colaborador:" GridPane.columnIndex="0" />
                    <TextField fx:id="colaboradorNomeField" GridPane.columnIndex="1" />

                    <Label text="Cargo:" GridPane.columnIndex="2" />
                    <TextField fx:id="colaboradorCargoField" editable="false" GridPane.columnIndex="3" />

                    <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <ComboBox fx:id="statusPdiComboBox" promptText="Selecione o Status" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label text="Data Início:" GridPane.rowIndex="1" />
                    <DatePicker fx:id="dataCriacaoPicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label prefHeight="17.0" prefWidth="100.0" text="Fechamento:      " GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                    <DatePicker fx:id="dataFechamentoPicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Button onAction="#handleSavePdiDetails" prefHeight="25.0" prefWidth="149.0" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Salvar " GridPane.columnIndex="3" GridPane.rowIndex="3" />
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints valignment="CENTER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" />
                        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
                        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
                    </rowConstraints>
                </GridPane>
            </content>
        </Tab>

        <Tab text="Objetivos">
            <content>
                <VBox spacing="10.0" style="-fx-padding: 20;">
                    <Text style="-fx-font-weight: bold;" text="Metas Detalhadas" />
                    <TableView fx:id="objetivoTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn prefWidth="250.0" text="Descrição" />
                            <TableColumn prefWidth="100.0" text="Prazo" />
                            <TableColumn prefWidth="50.0" text="Peso" />
                            <TableColumn prefWidth="80.0" text="Pontuação" />
                            <TableColumn prefWidth="100.0" text="Status" />
                            <TableColumn prefWidth="100.0" text="Ações" />
                        </columns>
                    </TableView>
                    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                        <Button onAction="#handleAddObjective" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Adicionar Novo Objetivo" />
                        <Button onAction="#handleCalculateGeneralScore" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Calcular Pontuação Geral" />
                    </HBox>
                </VBox>
            </content>
        </Tab>

        <Tab text="Documentos ">
            <content>
                <VBox spacing="10.0" style="-fx-padding: 20;">
                    <Text style="-fx-font-weight: bold;" text="Documentos registrados" />
                    <TableView fx:id="documentoTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn prefWidth="300.0" text="Nome do Arquivo" />
                            <TableColumn prefWidth="80.0" text="Tipo" />
                            <TableColumn prefWidth="150.0" text="Data Upload" />
                            <TableColumn prefWidth="100.0" text="Ações" />
                        </columns>
                    </TableView>
                    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                        <Button onAction="#handleUploadDocument" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Fazer Upload " />
                    </HBox>
                </VBox>
            </content>
        </Tab>
    </TabPane>

</VBox>
